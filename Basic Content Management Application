import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

// Abstract Post class
abstract class Post {
    String title;
    String description;

    public Post(String title, String description) {
        this.title = title;
        this.description = description;
    }

    abstract void display();
}

// Blog post
class BlogPost extends Post {
    String content;

    public BlogPost(String title, String description, String content) {
        super(title, description);
        this.content = content;
    }

    @Override
    void display() {
        System.out.println("Blog Post:");
        System.out.println("Title: " + title);
        System.out.println("Description: " + description);
        System.out.println("Content: " + content);
    }
}

// Vlog post
class VlogPost extends Post {
    String videoUrl;

    public VlogPost(String title, String description, String videoUrl) {
        super(title, description);
        this.videoUrl = videoUrl;
    }

    @Override
    void display() {
        System.out.println("Vlog Post:");
        System.out.println("Title: " + title);
        System.out.println("Description: " + description);
        System.out.println("Video URL: " + videoUrl);
    }
}

// Video post
class VideoPost extends Post {
    String videoUrl;

    public VideoPost(String title, String description, String videoUrl) {
        super(title, description);
        this.videoUrl = videoUrl;
    }

    @Override
    void display() {
        System.out.println("Video Post:");
        System.out.println("Title: " + title);
        System.out.println("Description: " + description);
        System.out.println("Video URL: " + videoUrl);
    }
}

// Photo post
class PhotoPost extends Post {
    String photoUrl;

    public PhotoPost(String title, String description, String photoUrl) {
        super(title, description);
        this.photoUrl = photoUrl;
    }

    @Override
    void display() {
        System.out.println("Photo Post:");
        System.out.println("Title: " + title);
        System.out.println("Description: " + description);
        System.out.println("Photo URL: " + photoUrl);
    }
}

public class ContentPostingApp {
    static List<Post> posts = new ArrayList<>();

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        while(true) {
            System.out.println("\nChoose the type of post to create:");
            System.out.println("1. Blog");
            System.out.println("2. Vlog");
            System.out.println("3. Video");
            System.out.println("4. Photo");
            System.out.println("5. Show all posts");
            System.out.println("0. Exit");
            System.out.print("Your choice: ");

            int choice = Integer.parseInt(scanner.nextLine());

            if(choice == 0) break;

            switch(choice) {
                case 1:
                    createBlog(scanner);
                    break;
                case 2:
                    createVlog(scanner);
                    break;
                case 3:
                    createVideo(scanner);
                    break;
                case 4:
                    createPhoto(scanner);
                    break;
                case 5:
                    showAllPosts();
                    break;
                default:
                    System.out.println("Invalid choice.");
            }
        }

        scanner.close();
        System.out.println("Exiting application.");
    }

    private static void createBlog(Scanner scanner) {
        System.out.print("Enter blog title: ");
        String title = scanner.nextLine();
        System.out.print("Enter blog description: ");
        String desc = scanner.nextLine();
        System.out.print("Enter blog content: ");
        String content = scanner.nextLine();

        posts.add(new BlogPost(title, desc, content));
        System.out.println("Blog post created!");
    }

    private static void createVlog(Scanner scanner) {
        System.out.print("Enter vlog title: ");
        String title = scanner.nextLine();
        System.out.print("Enter vlog description: ");
        String desc = scanner.nextLine();
        System.out.print("Enter vlog video URL: ");
        String videoUrl = scanner.nextLine();

        posts.add(new VlogPost(title, desc, videoUrl));
        System.out.println("Vlog post created!");
    }

    private static void createVideo(Scanner scanner) {
        System.out.print("Enter video title: ");
        String title = scanner.nextLine();
        System.out.print("Enter video description: ");
        String desc = scanner.nextLine();
        System.out.print("Enter video URL: ");
        String videoUrl = scanner.nextLine();

        posts.add(new VideoPost(title, desc, videoUrl));
        System.out.println("Video post created!");
    }

    private static void createPhoto(Scanner scanner) {
        System.out.print("Enter photo title: ");
        String title = scanner.nextLine();
        System.out.print("Enter photo description: ");
        String desc = scanner.nextLine();
        System.out.print("Enter photo URL: ");
        String photoUrl = scanner.nextLine();

        posts.add(new PhotoPost(title, desc, photoUrl));
        System.out.println("Photo post created!");
    }

    private static void showAllPosts() {
        System.out.println("\nAll Posts:");
        if(posts.isEmpty()) {
            System.out.println("No posts to show.");
            return;
        }
        for (Post post : posts) {
            post.display();
            System.out.println("-------------------------");
        }
    }
}
