import json
import hashlib
from datetime import datetime

FILE_NAME = "time_capsule.json"

def hash_message(message):
    return hashlib.sha256(message.encode()).hexdigest()

def create_capsule():
    message = input("ğŸ’Œ Write your message to the future: ")
    unlock_date = input("ğŸ“… Enter unlock date (YYYY-MM-DD): ")
    
    capsule = {
        "message_hash": hash_message(message),
        "message": message,
        "unlock_date": unlock_date
    }
    
    with open(FILE_NAME, "w") as f:
        json.dump(capsule, f)
    
    print(f"\nğŸ—ï¸ Time capsule sealed until {unlock_date}!\n")

def open_capsule():
    try:
        with open(FILE_NAME, "r") as f:
            capsule = json.load(f)
        today = datetime.now().date()
        unlock_date = datetime.strptime(capsule["unlock_date"], "%Y-%m-%d").date()
        
        if today >= unlock_date:
            print("\nğŸ‰ Your Time Capsule is open!")
            print("ğŸ’¬ Message:", capsule["message"])
        else:
            days_left = (unlock_date - today).days
            print(f"â³ Too early! Your message unlocks in {days_left} days.")
    except FileNotFoundError:
        print("âš ï¸ No capsule found. Create one first using option 1.")

def main():
    print("ğŸ”® Time Capsule Writer ğŸ”’")
    while True:
        print("\n1ï¸âƒ£ Create Capsule\n2ï¸âƒ£ Open Capsule\n3ï¸âƒ£ Exit")
        choice = input("Choose an option: ").strip()
        if choice == "1":
            create_capsule()
        elif choice == "2":
            open_capsule()
        elif choice == "3":
            print("ğŸ‘‹ Goodbye, future traveler!")
            break
        else:
            print("âŒ Invalid option.")

if __name__ == "__main__":
    main()
